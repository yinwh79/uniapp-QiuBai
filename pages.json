{
	// 页面导航
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus":{
					"scrollIndicator": "none",	// 隐藏滚动条
          "bounce":"none",    // 关闭上拉反弹效果
					// 导航栏
					"titleNView": {
						// 搜索框
						"searchInput": {
								"align":"center",
								"backgroundColor": "#f7f7f7",
								"borderRadius":"4px",
								"placeholder":"搜索糗事",
								"placeholderColor":"#ccc",
								"disabled": true
						},
						// 按钮
						"buttons": [
							// 左边签到
							{
								"color":"#ff9679",
								"colorPressed": "#bbb",
								"float": "left",
								"fontSize":"22px",
								"fontSrc": "/static/fonts/iconfont.ttf",
								"text": "\ue609"
							},
							// 右边
							{
								"color":"#000",
								"colorPressed": "#bbb",
								"float": "right",
								"fontSize":"22px",
								"fontSrc": "/static/fonts/iconfont.ttf",
								"text": "\ue653"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/news/news",
			"style": {
				"app-plus":{
				  "titleNView":false
				}
			}
		},
		{
			"path": "pages/paper/paper",
			"style": {
        "app-plus":{
          "titleNView":false
        }				
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				// "navigationBarTitleText": "uni-app"
			}
		}
        ,{
            "path" : "pages/search/search",
            "style" : {
              "app-plus":{
              	"scrollIndicator": "none",	// 隐藏滚动条
                "bounce":"none",    // 关闭上拉反弹效果
              	// 搜索页导航栏
              	"titleNView": {
                  // 取消返回按钮
                  "autoBackButton": false,
              		// 搜索框
              		"searchInput": {
              				"align":"left",                     
              				"backgroundColor": "#f7f7f7",
              				"borderRadius":"4px",
              				"placeholder":"搜索糗事",
              				"placeholderColor":"#ccc"  				
              		},
              		// 按钮
              		"buttons": [             			
              			// 右边
              			{
              				"color":"#000",
              				"colorPressed": "#bbb",
              				"float": "right",
              				"fontSize":"16px",              		
              				"text": "取消"
              			}
              		]
              	}
              }
            }
        }
        ,{
            "path" : "pages/AddInput/AddInput",
            "style" : {
              // 设置自定义导航
              "app-plus":{
                // 禁止原生导航
                "titleNView":false
              }
            }
        }
    ],
	// 底部导航栏
	"tabBar": {
		"color": "#adadad",
		"selectedColor": "#fee42a",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [
			{
			"pagePath": "pages/index/index",
			"text": "糗事",
			"iconPath": "/static/tabBarIcon/index.png",
			"selectedIconPath": "/static/tabBarIcon/index-selected.png"
			},
			{
			"pagePath": "pages/news/news",
			"text": "动态",
			"iconPath":"static/tabBarIcon/news.png",
			"selectedIconPath":"static/tabBarIcon/news-selected.png"
			},
			{
			"pagePath": "pages/paper/paper",
			"text": "小纸条",
			"iconPath": "static/tabBarIcon/paper.png",
			"selectedIconPath":"static/tabBarIcon/paper-selected.png"		
			},
			{
			"pagePath": "pages/home/home",
			"text": "我的",
			"iconPath":"/static/tabBarIcon/home.png",
			"selectedIconPath":"/static/tabBarIcon/home-selected.png"
			}
		]
	},
	// 全局样式
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "糗事百科",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	}
}
